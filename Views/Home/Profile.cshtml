<script>
    $(document).ready(function () {
        $("#c").click(function () {
            // Get property details
            var propertyId = @Model.id;
            var propertyName = '@Model.property_name';
            var propertyPrice = @Model.property_price;

            // Directly call the ConfirmOrder action
            $.post('/Home/ConfirmOrder', { propertyId: propertyId, propertyName: propertyName, propertyPrice: propertyPrice }, function (data) {
                // Handle the response if needed
                console.log(data);
                // Redirect to the cart or another page
                window.location.href = '/Home/Cart';
            });
        });
    });
</script>
