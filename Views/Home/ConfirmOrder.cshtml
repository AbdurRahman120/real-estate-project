<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>EstateAgency - About</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <link href="~/Content/img/favicon.png" rel="icon">
    <link href="~/Content/img/apple-touch-icon.png" rel="apple-touch-icon" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">
    <link href="~/Content/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">
</head>
@model List<Assignment.Models.CartItem>
    <div class="container w-75">
        <div style="margin-top:200px">
            <h2>Checkout</h2>

            @using (Html.BeginForm("ConfirmOrder", "Home", FormMethod.Post))
            {
                <label for="customerName">Customer Name:</label>
                <br />
                <input type="text" class="form-control w-100" id="customerName" name="customerName" required />
                <br />

                <label for="customerEmail">Customer Email:</label>
                <br />
                <input type="email" class="form-control w-100" id="customerEmail" name="customerEmail" required />
                <br />

                <button type="submit"  class="btn btn-success">Confirm Order</button>
            }

            @if (Model != null && Model.Any())
            {
                <table>
                    <thead>
                        <tr>
                            <th>Property Name</th>
                            <th>Property Price</th>
                            <th>Property Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cartItem in Model)
                        {
                            <tr>
                                <td>@cartItem.PropertyName</td>
                                <td>@cartItem.PropertyPrice</td>
                                <td>@cartItem.PropertyImage</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        </div>
<div id="preloader"></div>
<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
<script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/Content/vendor/swiper/swiper-bundle.min.js"></script>
